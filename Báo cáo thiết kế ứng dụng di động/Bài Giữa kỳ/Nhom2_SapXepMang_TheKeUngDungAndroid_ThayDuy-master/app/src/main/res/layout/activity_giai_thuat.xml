<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GiaiThuat">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn giải thuật" />

    <RadioGroup
        android:id="@+id/rbGT"
        android:layout_width="match_parent"
        android:layout_height="443dp">

        <RadioButton
            android:id="@+id/selectionSort_ChonGT"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:checked="true"
            android:text="Selection Sort" />

        <RadioButton
            android:id="@+id/insertSort_ChonGT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Sort" />

        <RadioButton
            android:id="@+id/bubbleSort_ChonGT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bubble Sort" />

        <RadioButton
            android:id="@+id/interchangeSort_ChonGT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interchange Sort" />

        <RadioButton
            android:id="@+id/binarySort_ChonGT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Binary Inserlon Sort" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Giải thuật nâng cao : " />

        <RadioButton
            android:id="@+id/quickSort_ChonGT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Sort" />

        <RadioButton
            android:id="@+id/heapSort_ChonGT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heap Sort" />

        <RadioButton
            android:id="@+id/flashSort_ChonGT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FlashSort" />
    </RadioGroup>

    <Button
        android:id="@+id/btnClose_ChonGT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng" />
</LinearLayout>