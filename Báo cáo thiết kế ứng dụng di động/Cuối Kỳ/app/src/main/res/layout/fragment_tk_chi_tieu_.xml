<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anhnen1"
    tools:context=".DAO.TkChiTieu_Fragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <TableLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="2dp">

           <TableRow android:layout_margin="5dp">

               <Button
                   android:id="@+id/btnNgayBD_TKCT_Fragment"
                   android:layout_width="123dp"
                   android:layout_height="40dp"
                   android:background="@drawable/buuton_design"
                   android:text="Ngày bắt đầu"></Button>

               <TextView
                   android:id="@+id/txtNgayBD_TKCT_Fragment"
                   android:gravity="center"
                   android:hint="Ngày Bắt đầu :"
                   android:textAlignment="center"
                   android:textSize="20dp"

                   android:textStyle="bold"></TextView>
           </TableRow>

           <TableRow android:layout_margin="5dp">

               <Button
                   android:id="@+id/btnNgayKT_ThongKeCT_Fragment"
                   android:layout_width="116dp"
                   android:layout_height="40dp"
                   android:background="@drawable/buuton_design"
                   android:text="Ngày kết thúc"></Button>

               <TextView
                   android:id="@+id/txtNgayKT_TK_Fragment"
                   android:gravity="center"
                   android:hint="Ngày Kết thúc :"
                   android:textAlignment="center"
                   android:textSize="20dp"
                   android:textStyle="bold"></TextView>
           </TableRow>

       </TableLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="56dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tổng tiển chi :"
               android:textSize="20dp"
               android:textStyle="bold" />

           <TextView
               android:textSize="30dp"
               android:textStyle="bold"
               android:gravity="right"
               android:textColor="@color/teal_700"
               android:id="@+id/txtTienChi_ThongKe_Fragment"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""></TextView>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="55dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textViewsdsd"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tổng tiển thu :"
               android:textSize="20dp"
               android:textStyle="bold" />

           <TextView
               android:textSize="30dp"
               android:textColor="@color/maudo"
               android:gravity="right"
               android:textStyle="bold"
               android:id="@+id/txtTienThu_ThongKe_Fragment"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""></TextView>
       </LinearLayout>
       <LinearLayout
           android:paddingRight="10dp"
           android:paddingLeft="10dp"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal">

           <Button
               android:id="@+id/btnDuyet_ThongKeCT_Fragment"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:background="@drawable/buuton_design"

               android:text="Duyệt DS" />


       </LinearLayout>


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical" >

               <ListView
                   android:id="@+id/lv_TKChiTieu_Fragment"
                   android:layout_width="match_parent"
                   android:layout_height="451dp">
               </ListView>
           </LinearLayout>
       </ScrollView>
   </LinearLayout>

</FrameLayout>